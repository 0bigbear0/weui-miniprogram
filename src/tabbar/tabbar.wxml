<view class="weui-tabbar">
  <!-- 选中的时候往weui-tabbar__item加class:weui-bar__item_on  -->
    <view data-index='{{index}}' bindtap="tabChange" wx:for="{{list}}" class="weui-tabbar__item {{index === selected ? 'weui-bar__item_on' : ''}}">
        <view style="position: relative;display:inline-block;">
          <image src="{{selected === index ? item.selectedIconPath : item.iconPath}}" class="weui-tabbar__icon"></image>
          <mp-badge dot="{{!!item.dot}}" style="position: absolute;top:-2px;left:calc(100% - 3px)">{{item.badge}}</mp-badge>
        </view>
        <view class="weui-tabbar__label">{{item.text}}</view>
    </view>
</view>
